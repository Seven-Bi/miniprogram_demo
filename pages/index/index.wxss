/**index.wxss**/
.container {
  background-image: url(https://pbs.twimg.com/media/Daczy83U8AAG1_M?format=jpg&name=medium);
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.authBtn {
  margin-top: 700rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: rgb(201, 227, 245);
  color: white;  
  border-radius: 100rpx;
}

.btnImg {
  margin-right: 20rpx;
  width: 50rpx;
  height: 50rpx;
}

.authBtn::after {
  border-radius: 100rpx;
  border: 0; 
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}